<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_all"
    tools:context=".PlaylistFragment">



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/all_item_likes"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_back_current_track_all"
                android:gravity="center">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/heart" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/likeText"
                    android:text="Like"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:fontFamily="@font/quicksand"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/all_item_recent"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_back_current_track_all"
                android:gravity="center">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/recent" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recentText"
                    android:text="Recent"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:fontFamily="@font/quicksand"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_playlist_button"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:orientation="vertical"
                android:background="@drawable/round_back_current_track_all"
                android:gravity="center">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/add_playlist" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Playlist"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:fontFamily="@font/quicksand"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not Working"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/quicksand"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>