<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape for the button -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Set the default background color -->
            <corners android:radius="8dp" /> <!-- Set the corner radius -->
        </shape>
    </item>

    <!-- Icon for the button -->
    <item android:drawable="@drawable/pause_fill"
        android:gravity="center" />

</layer-list>
